<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="135dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="20"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:id="@+id/offer_banner"
                android:background="@drawable/banner"
                android:text="12% OFF"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingLeft="0dp"
                android:textSize="9sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:layout_weight="0.4"
                android:drawableStart="@drawable/ic_unmarked_favourite"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            />
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:id="@+id/express_banner"
            android:visibility="invisible"
            android:layout_marginLeft="13dp"
            android:background="#FDDA16"
            android:layout_weight="1">

        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:background="@drawable/expresso"
            />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:id="@+id/product_actual_price"
            android:text="22000"
            android:layout_marginLeft="15dp"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:gravity="start|center"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:id="@+id/product_offer_price"
            android:text="31000"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="start|center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/product_name"
            android:layout_weight="3"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:text="appbar_scrolling_view_behavior"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"

            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnAdd"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="ADD"
                android:textColor="@color/white"
                android:background="@drawable/button_green_background"
                />
        </LinearLayout>






    </LinearLayout>

</androidx.cardview.widget.CardView>