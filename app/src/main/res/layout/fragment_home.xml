<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="homeDataViewModel"
            type="in.nadeerm.app.webandcraft.viewmodel.HomeDataViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".webandcraft.view.ui.BaseFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



           <androidx.appcompat.widget.SearchView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="40dp"
               android:tooltipText="Search"
               android:drawableEnd="@drawable/ic_launcher_background"

               />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_time_table"
                android:layout_below="@+id/cv_my_account"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:id="@+id/banner_rv"
                                />
                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </FrameLayout>

</layout>